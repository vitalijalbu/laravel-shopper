{
    "name": "vitalijalbu/laravel-shopper",
    "description": "A complete e-commerce package for Laravel inspired by Shopify",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitali Jalbu",
            "email": "vitalijalbu@example.com"
        }
    ],
    "require": {
        "php": "^8.3 || ^8.4",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/sanctum": "^4.2.0",
        "laravel/socialite": "^5.23",
        "league/csv": "^9.16",
        "pusher/pusher-php-server": "^7.0",
        "spatie/laravel-activitylog": "^4.0",
        "spatie/laravel-backup": "^9.0",
        "spatie/laravel-data": "^4.0",
        "spatie/laravel-medialibrary": "^11.13.0",
        "spatie/laravel-permission": "^6.21.0",
        "spatie/laravel-query-builder": "^6.0",
        "tightenco/ziggy": "^2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "laravel/pint": "^1.13",
        "nunomaduro/collision": "^8.8.2",
        "orchestra/testbench": "^10.4.0",
        "pestphp/pest": "^3.8.2",
        "pestphp/pest-plugin-laravel": "^3.2.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelShopper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelShopper\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelShopper\\ShopperServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
